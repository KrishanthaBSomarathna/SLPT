<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/passengerNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Passenger Name: John Doe"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/contactNumberTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact Number: 1234567890"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/currentLocationTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current Location: Sample Current Location"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/destinationLocationTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Destination Location: Sample Destination Location"
        android:textSize="16sp" />

    <Button
        android:id="@+id/acceptTripButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="?android:attr/selectableItemBackground"
        android:text="Accept Trip"
        android:textSize="16sp" />
</LinearLayout>
