<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:elevation="8dp"
        android:gravity="center"
        android:text="Route Two TimeTable"
        android:textColor="@color/black"

        android:textSize="25dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="471dp"
        android:orientation="vertical"
        android:padding="10dp"
        android:elevation="4dp">

        <!-- Add a ScrollView to accommodate a potentially long list of EditText fields -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="436dp"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/parentLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <!-- EditText fields for each location will be added here dynamically -->
            </LinearLayout>
        </ScrollView>


        <!-- Button to save data to Firebase -->
    </LinearLayout>
    <Button
        android:id="@+id/saveButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:backgroundTint="#0F2004"
        android:text="Save Time Table"
        android:textColor="#FFFFFF"
        android:textSize="15dp"
        />

</LinearLayout>
