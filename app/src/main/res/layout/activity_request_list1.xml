<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <TextView
        android:id="@+id/passengerNameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Passenger Name"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/contactNumberTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Contact Number" />

    <TextView
        android:id="@+id/currentLocationTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Current Location" />

    <TextView
        android:id="@+id/destinationLocationTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Destination Location" />

    <Button
        android:id="@+id/acceptTripButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm Trip"
        android:backgroundTint="#4CAF50"
        android:textColor="#FFFFFF" />


</LinearLayout>