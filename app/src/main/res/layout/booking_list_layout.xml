<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/baseline_bookmark_24" />

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

            <TextView
                    android:id="@+id/booked_date"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:text="XX"
                    android:textAlignment="textStart"
                    android:paddingLeft="5dp" />

            <TextView
                    android:id="@+id/bus_route"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:text="XX"
                    android:textAlignment="textEnd"
                    android:paddingHorizontal="20dp" />
        </LinearLayout>

        <com.google.android.material.button.MaterialButton
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                android:padding="0dp"
                android:layout_marginEnd="5dp"
                app:icon="@drawable/baseline_delete_outline_24"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                app:iconSize="24dp"
                app:cornerRadius="24dp"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                android:id="@+id/delete_booking"
                app:iconTint="#B53737"
                app:backgroundTint="#28FF0000"
                android:contentDescription="Button to change current date"/>
    </LinearLayout>

    <TextView
            android:id="@+id/bus_route_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="15sp"
            android:text="XX" />
</LinearLayout>
