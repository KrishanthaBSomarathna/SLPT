<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register">
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="202dp"
        android:layout_height="36dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/aclonica"
        android:text="Track Dot"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/phonelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:layout_marginBottom="343dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:id="@+id/authfail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Try Another Phone Number or Try Later!"
            android:textSize="20dp"
            android:textColor="#FF0000"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal"
            android:background="@drawable/editbg_black_border"
            >




            <Spinner
                android:id="@+id/spinnerCountryCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/country_codes"
                android:spinnerMode="dropdown" />

            <EditText
                android:id="@+id/editTextPhoneNumber"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:hint="Phone Number"
                android:inputType="number"
                android:padding="10dp"
                />
        </LinearLayout>

        <Spinner
            android:id="@+id/spinnerUserType"
            android:layout_width="match_parent"

            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/editbg_black_border"
            android:entries="@array/user_type"
            android:layout_gravity="center"
            android:spinnerMode="dialog" />

        <Button
            android:id="@+id/buttonSendOTP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="#EC9100"
            android:textColor="#050000"
            android:textSize="25dp"
            android:layout_marginTop="24dp"
            android:text="SEND OTP" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/otplayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:layout_marginBottom="343dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OTP Code Successfully Sent!!!"
            android:textSize="20dp"
            android:textColor="#00A624"
            android:layout_gravity="center"/>

        <EditText
            android:id="@+id/editTextVerificationCode"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:ems="10"
            android:background="@drawable/editbg_black_border"
            android:hint="OTP"
            android:padding="5dp"
            android:inputType="text" />

        <Button
            android:id="@+id/buttonVerifyOTP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="#EC9100"
            android:textColor="#050000"
            android:layout_marginTop="24dp"
            android:textSize="25dp"
            android:text="Verify OTP" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
